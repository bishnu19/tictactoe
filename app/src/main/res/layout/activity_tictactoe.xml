        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnOne"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:tag="00"
            android:text="" />

        <Button
            android:id="@+id/btnTwo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
